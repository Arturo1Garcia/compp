color currentColor;

void setup() {
  size(800, 600);
  background(255);
  currentColor = color(random(255), random(255), random(255)); 
}

void draw() {
  background(255);
  fill(currentColor);
  ellipse(width/2, height/2, width/3, height/3); 
}

void mousePressed() {
  currentColor = color(random(255), random(255), random(255));
}
